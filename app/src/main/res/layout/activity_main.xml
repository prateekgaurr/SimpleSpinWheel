<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_wheel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.prateek.simplespinwheel.SimpleSpinWheel
        android:id="@+id/simpleSpinWheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Spin The Wheel"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/simpleSpinWheel"
        app:layout_constraintStart_toStartOf="@+id/simpleSpinWheel"
        app:layout_constraintTop_toBottomOf="@+id/simpleSpinWheel" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/simpleSpinWheel"
        app:layout_constraintStart_toEndOf="@+id/simpleSpinWheel"
        app:layout_constraintTop_toTopOf="@+id/simpleSpinWheel" />


</androidx.constraintlayout.widget.ConstraintLayout>